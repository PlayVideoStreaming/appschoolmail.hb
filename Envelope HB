<script>
  const envelope = document.getElementById('envelope');

  // Flag para garantir que o clique aconteça apenas uma vez
  let clicked = false;

  // Evento de clique para abrir ou fechar o envelope
  envelope.addEventListener('click', function () {
    if (!clicked) {
      clicked = true; // Marca que o envelope foi clicado

      envelope.classList.add('open'); // Adiciona a classe open imediatamente

      // Após 1 segundo, expandir a parte branca do envelope
      setTimeout(function () {
        envelope.classList.add('expand'); // Expande a parte branca do envelope
      }, 1000); // Atraso de 1 segundo para a expansão
    }
  });
</script>

